@using SkyLo.Models
@model RegisterViewModel

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form", @id = "register-form", @style = "display: none;" }))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })

  <div class="form-group">
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @name = "email", @id = "email", @tabindex = "1", @placeholder = "Email Address" })
  </div>

  <div class="form-group">
    @Html.PasswordFor(m => m.Password, new { @name = "password", @id = "password", @tabindex = "2", @class = "form-control", @placeholder = "Password" })
  </div>

  <div class="form-group">
    @*<input type="password" name="confirm-password" id="confirm-password" tabindex="2" class="form-control" placeholder="Confirm Password">*@
    @Html.PasswordFor(m => m.ConfirmPassword, new { @name="confirm-password", @id="confirm-password", @tabindex="2", @class="form-control", @placeholder="Confirm Password" })
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
      </div>
    </div>
  </div>
}