@using SkyLo.Models
@model LoginViewModel

@using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @id = "login-form" }))
{
  @Html.AntiForgeryToken()
  @Html.ValidationSummary(true, "", new { @class = "text-danger" })

  <div class="form-group">
    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Username", @tabindex = "1" })
    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
  </div>

  <div class="form-group">
    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Password", @tabindex = "2" })
    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
  </div>

  <div class="form-group text-center">
    @Html.CheckBoxFor(m => m.RememberMe, new { @id = "remember", @tabindex = "3" })
    @Html.LabelFor(m => m.RememberMe)
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="row">
      <div class="col-lg-12">
        <div class="text-center">
          @Html.ActionLink("Forgot password?", "ForgotPassword", "Account", new { @tabindex = "5", @class = "forgot-password" })
        </div>
      </div>
    </div>
  </div>
}
