@{
    ViewBag.Title = "Add User To Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="starter-template">
    <h1>Add New Role</h1>
    <p class="lead">Every user has to have a role.</p>
</div>

<div class="container-fluid">
    <div class="col-md-6 col-md-offset-3 well well-lg">
        @using (Html.BeginForm("AddUserToRole", "Admin", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form", @class = "form-horizontal" }))
        {
            <!--Username-->
            <div class="form-group">
                <label for="userNm" class="col-md-4 control-label">Username</label>
                <div class="col-md-6">
                    @*<input type="text" class="form-control" id="userNm" placeholder="Select username">*@
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="usernameDdBtn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Select username
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="usernameDdBtn">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!--Role-->
            <div class="form-group">
                <label for="userRole" class="col-md-4 control-label">User role</label>
                <div class="col-md-6">
                    @*<input type="text" class="form-control" id="userRole" placeholder="Select role for username">*@
                    <div class="dropdown">
                        <button class="btn btn-default dropdown-toggle" type="button" id="userroleDpBtn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            Select role for username
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="userroleDpBtn">
                            <li><a href="#">Action</a></li>
                            <li><a href="#">Another action</a></li>
                            <li><a href="#">Something else here</a></li>
                            <li><a href="#">Separated link</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        }
    </div>
</div>