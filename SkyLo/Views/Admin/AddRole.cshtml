
@{
    ViewBag.Title = "Add Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="starter-template">
  <h1>Add New Role</h1>
  <p class="lead">Just adding new role to the app.</p>
</div>

<div class="container-fluid">
  <div class="col-md-6 col-md-offset-3 well well-lg">
    <form class="form-horizontal">
      <!--Name-->
      <div class="form-group">
        <label for="RoleNm" class="col-md-4 control-label">Role Name</label>
        <div class="col-md-6">
          <input type="text" class="form-control" id="RoleNm" placeholder="Enter role name">
        </div>
      </div>
      <!---->
      <div class="form-group">
        <div class="col-md-6 col-md-offset-4">
          <button type="submit" class="btn btn-default">Add role</button>
        </div>
      </div>
    </form>
  </div>
</div>